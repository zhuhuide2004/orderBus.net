@{
    ViewBag.Title = "UsersPopup";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<Bus.Data.Users>

<style type="text/css">
    html {
        _overflow-y: scroll;
    }
    td{
        cursor:pointer;
    }
</style>

<div class="table-list">
    <table id="userList" width="100%" cellspacing="0" border="0">
        <thead>
            <tr>
                <th width="60" align="left" >姓名</th>
                <th width="40" align="left">性别</th> 
                <th width="100" align="left">电话</th>
            </tr>
        </thead>
    <tbody>
        @if (Model.Count == 0) { 
        <tr>
            <td colspan="3">没有任何数据</td>
        </tr>
        }
        @foreach(var item in Model){
            <tr>
	            <td align="left" >
                    @(item.Names)
                    <input id="userID" type="hidden" value="@(item.ID)" />
	            </td>
                <td align="left">@(item.Sex==1?"女":item.Sex==2?"男":"")</td>
                <td align="left">@(item.Phone)</td>
			</tr>                    
        }
    </tbody>
    </table>
</div>

 <script type="text/javascript">

     //双击事件
     function initUserTypeChk() {
         $("#userList tr").dblclick(function () {

             //刷新页面显示此人的人员卡片
             parent.window.location.href = "UsersMain?UserID=" + $(this).find('input[id="userID"]').val();
         });
     }
     initUserTypeChk();


</script>
