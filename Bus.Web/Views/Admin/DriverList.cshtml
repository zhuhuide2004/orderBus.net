@{
    ViewBag.Title = "DriverList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model PagedList<Bus.Data.Driver>
<script type="text/javascript" src="/Content/layer/layer.min.js?v=1.6.0"></script>
<div class="subnav">
    <div class="content-menu ib-a blue line-x">
        <a href='javascript:;;' class="on"><em>司机管理</em></a><span>|</span> 
        <a class="" href="Driver"><em>添加司机</em></a>
    </div>
</div>
<style type="text/css">
	html{_overflow-y:scroll}
</style>

<script type="text/javascript">
    function GoSearch() {
        var DriverName = $("#DriverName").val();//司机姓名
        var Sex = $("#Sex").val();//性别
        var Phone = $("#Phone").val();//电话

        var u = "DriverList?DriverName=" + DriverName +
                            "&Sex=" + Sex +
                            "&Phone=" + Phone;
        window.location.href = u;
    }
</script>

<table width="100%" cellspacing="0" class="search-form">
    <tbody>
        <tr>
            <td><div class="explain-col">

        @{ var DriverName = TheCMS.Common.iRequest.GetQueryString("DriverName");}
        @{ var Phone = TheCMS.Common.iRequest.GetQueryString("Phone");}
        @{ var Sex = TheCMS.Common.iRequest.GetQueryString("Sex");}
        司机姓名 <input type="text" id="DriverName" name="DriverName" value="@(DriverName)" style="width:90px;"  class="input-text" /> 
        电话 <input type="text" id="Phone" name="Phone" value="@(Phone)" style="width:90px;"  class="input-text" /> 
        性别 <select id="Sex">
                    <option value="" @(Sex==""?" selected":"")>男/女</option>
                    <option value="2" @(Sex=="2"?" selected":"")>男</option>
                    <option value="1" @(Sex=="1"?" selected":"")>女</option>
                   </select>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="" onclick="DriverAdd()"><em>添加</em></a>
                <a class="" onclick="GoSearch()"><em>查询</em></a>
        <input type="button" name="Search" class="button" onclick="GoSearch()" value="查询">

                </div>
            </td>
        </tr>
    </tbody>
</table>

    <div class="pad_10">
<div class="bk10"></div>
<div class="table-list">
    <table width="100%" cellspacing="0" >
        <thead>
            <tr>
            <th align='center' width="100">序号</th>
            <th align='center' width="100">司机姓名</th>
            <th align='center' width="100">性别</th>
            <th align='center' width="100">电话</th> 
            <th align="center" width="180">身份证号</th>
            <th align='center' width="100">生日</th> 
            <th align='center' width="100">领证年月</th> 
            <th align='center' width="200">违章状况</th> 
            <th align='center' width="100">家庭住址</th> 
            <th align='center' width="200">备注</th> 
			<th align='center' width="120">删除</th>
            </tr>
        </thead>
    <tbody>
        @if (Model.Count == 0) { 
        <tr>
            <td colspan="9">没有任何数据</td>
        </tr>
        }
        @foreach(var item in Model){
    <tr>
		<td align='center'>@(item.ID)</td>
		<td align='center'><a href="javascript:;;" onclick="DriverName('@(item.DriverName)','@(item.ID)')" style="font-weight:bold;">@(item.DriverName)</a></td>
		<td align='center'>@(item.Sex==1?"女":item.Sex==2?"男":"")</td>
        <td align='center'>@(item.Phone)</td>
        <td align='center'>@(item.IdCard)</td>
        <td align='center'>@(item.BirthDay)</td>
        <td align='center'>@(item.DriveStartTime)</td>
        <td align='center'>@(item.BreakRules)</td>
        <td align='center'>@(item.Address)</td>
        <td align='center'>@(item.Etc)</td>
        <td align='center' ><a href="javascript:DelData('delDriver','@(item.ID)')">删除</a>
        </td>
				</tr>                    
        }
        
   
    </tbody>
    </table>

@*    <div class="btn"> 
       
    </div>*@
    <div id="pages">
         @Html.Pager(Model,new PagerOptions{PageIndexParameterName="page", CurrentPagerItemWrapperFormatString = "<span class=\"curpage\">{0}</span>", NumericPagerItemWrapperFormatString = "<span class=\"item\">{0}</span>", CssClass = "pages", AutoHide=false, SeparatorHtml = ""})
    </div>
</div>
</div>
    </div>
<script type="text/javascript">
    function DriverName(t, v) {
        var h = $(document).height();
        h = h - 80;
        parent.$.layer({
            type: 2,
            title: '修改【'+t+'】信息.',
            iframe: { src: '/Admin/DriverUpdate?ID=' + v },
            area: ['640px', h+'px'],
            offset: ['30px', '']
        });
    }

    function DriverAdd() {
        var h = $(document).height();
        h = h - 80;
        parent.$.layer({
            type: 2,
            title: '添加司机信息.',
            iframe: { src: '/Admin/Driver'},
            area: ['640px', h + 'px'],
            offset: ['30px', '']
        });
    }
    
</script>
