//判断必选下拉框是否已经选择，如不需要可以不调用，isNull[i]存放的是下拉框的名字
function isNullWithBox() {
    var i;

    for (i = 0; i < isNull.length; i = i + 1) {
        var boxTemp = eval("document.forms[0]." + isNull[i]).value;

