    CityID["@j"] = ["@(item.ID)"];
    CityID["@(j + 1)"] = ["@(item.AddName)"];
    CityID["@(j + 2)"] = ["@(item.ParentID)"];
</script> 

}

<script type="text/javascript">
    function returnVal() {
        if ($("#CountryID").val() == "-1" || $("#ProvinceID").val() == "-1" || $("#CityID").val() == "-1") {
            window.returnValue = "";
        } else {
            window.returnValue = $("#CountryID").find("option:selected").text() + ", " + $("#ProvinceID").find("option:selected").text() + ", " + $("#CityID").find("option:selected").text();
        }
        window.close();
    }
</script>

