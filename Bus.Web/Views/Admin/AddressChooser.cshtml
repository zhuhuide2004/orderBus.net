<script type="text/javascript">
    function returnVal() {
        if ($("#CountryID").val() == "-1" || $("#ProvinceID").val() == "-1" || $("#CityID").val() == "-1" || $("#StreetID").val() == "-1") {
            window.returnValue = "";
        } else {
            window.returnValue = $("#CountryID").find("option:selected").val() + "," + $("#ProvinceID").find("option:selected").val() + "," + $("#CityID").find("option:selected").val() + "," + $("#StreetID").find("option:selected").val();
        }

        window.close();
    }

    function GetQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);

        if (r != null) return decodeURI(r[2]); return null;
    }
</script>

