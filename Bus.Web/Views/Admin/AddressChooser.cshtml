}

//selectName为二维数组，其中存放的是要各级下拉框的名字
//第一组级联下拉框selectName[0]，第二组级联下拉框selectName[1]
var selectName = new Array();

selectName[0] = new Array("CountryID", "ProvinceID", "CityID");

//必选下拉框数组，如果“ProvinceID”，也为必选，
