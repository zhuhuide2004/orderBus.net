                            options.add(oOption);
                        }
                    }

                    if (length != 1) {
                        style = "display: ";
                    } else {
                        style = "display: none";
                    }
                }
            }

            if (address != "") {
                if (num < addresses.length) {
                    var boxName = selectName[i][num];

                    //递归调用
                    trendsSelect(boxName, num + 1, address);
                }
            }
        }
    }
}

