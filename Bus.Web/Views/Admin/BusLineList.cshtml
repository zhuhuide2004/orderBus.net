<script type="text/javascript">
    function ShowStation(url, title) {
        //var url2 = "/admin/" + url;
        //var h = $(document).height();
        //h = h - 80;
        //parent.$.layer({
        //    type: 2,
        //    title: title,
        //    iframe: { src: url2 },
        //    area: ['950px', h + 'px'],
        //    offset: ['30px', '']
        //});
        var url2 = "/admin/" + url;
        var h = $(document).height();
        var hOff = (h - 550) / 2;
        parent.$.layer({
            type: 2,
            title: title,
            iframe: { src: url2 },
            area: ['500px', '550px'],
            offset: [hOff + 'px', '']
        });
    }

    $("#BusLineList td").mouseover(function (e) {
        if ($.trim($(this).text()) != "") {
            layer.tips($(this).text(), this, { guide: 1, time: 2 });
        }
    });

    $("input,select").keyup(function (event) {
        if (event.keyCode == 13) {
            GoSearch();
        }
    });
</script>
