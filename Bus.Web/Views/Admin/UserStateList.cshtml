@{
    ViewBag.Title = "UserStateList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model PagedList<Bus.Data.UserState>

<div class="subnav">
    <div class="content-menu ib-a blue line-x">
        <a href='javascript:;;' class="on"><em>状态管理</em></a><span>|</span> 
        <a class="" href="UserState"><em>添加状态</em></a>
    </div>
</div>
<style type="text/css">
	html{_overflow-y:scroll}
</style>
<div class="pad_10">

<div class="bk10"></div>
<div class="table-list">
    <table width="100%" cellspacing="0" >
        <thead>
            <tr>
            <th width="30">编号</th>
            <th width="180">状态名称</th> 
			<th width="180">管理操作</th><th></th>
            </tr>
        </thead>
    <tbody>
        @if (Model.Count == 0) { 
        <tr>
            <td colspan="8">没有任何数据</td>
        </tr>
        }
        @foreach(var item in Model){
    <tr>
					<td align='center'>@(item.ID)</td>
					<td >@(item.StateName)</td>
					<td align='center' ><a href="UserState?ID=@(item.ID)">修改</a> | <a href="javascript:DelData('deluserstate','@(item.ID)')">删除</a></td><td></td>
				</tr>                    
        }
        
   
    </tbody>
    </table>

@*    <div class="btn"> 
       
    </div>*@
    <div id="pages">
         @Html.Pager(Model,new PagerOptions{PageIndexParameterName="page", CurrentPagerItemWrapperFormatString = "<span class=\"curpage\">{0}</span>", NumericPagerItemWrapperFormatString = "<span class=\"item\">{0}</span>", CssClass = "pages", AutoHide=false, SeparatorHtml = ""})
    </div>
</div>
</div>


