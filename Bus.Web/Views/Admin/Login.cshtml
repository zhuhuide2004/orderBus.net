<title>管理登录</title>
<style type="text/css">
	body{margin:0; padding:0; font-size:9pt;}
	#login{margin:auto; width:975px; height:368px; margin-top:120px;}
	#top_left{width:691px; height:89px; float:left;}
	#top_left img {margin-left:0px;}
	#top_center{width:248px; height:89px; background:url(/Content/admin/images/login_05.gif); float:left;}

	#center_left{width:691px; height:190px; background:url(/Content/admin/images/login_09_new.jpg); float:left;}
	#center_middle{width:248px; height:190px; float:left; background:url(/Content/admin/images/login_13.gif) repeat-y;}
	#center_right{width:36px; height:190px; float:right; background:url(/Content/admin/images/login_11.gif);}

	#down_left{width:691px; height:89px; float:left; margin-top:15px;}
	#down_center{width:248px; height:89px; background:url(/Content/admin/images/login_16.gif); float:left;margin-top:-35px;}
	#inf{width:691px; height:38px; background:url(/Content/admin/images/login_18.gif) no-repeat; }
	.inf_text{display:block; width:100px; height:20px; font-size:16px; font-weight:bolder; color:#fff; margin-left:17px; margin-top:12px; float:left;}
	.copyright{display:block; float:left; margin-left:17px; margin-top:15px;}

	#user_div{ margin-left:40px; margin-top:45px; height:25px;}
	#password_div{margin-left:40px; margin-top:25px; height:25px;}
	input{width:120px; height:18px; border:solid 1px #aca7a7; font-size:9pt;}
	#btn{margin-left:30px; margin-top:0px;height:25px; margin-right:28px; text-align:center;}
	#btn a{display:block; line-height:25px; background: url(/Content/admin/images/bt_bg.gif); border: solid 1px #b6b6b6; width:65px; float:left; margin-left:15px; text-decoration:none; color:#000;}
</style>
