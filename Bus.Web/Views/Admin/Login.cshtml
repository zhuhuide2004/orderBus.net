<body onload="javascript:document.myform.username.focus();">
<form action="/Admin/Login" method="post" name="myform">
    <div id="login">
	
	     <div id="top">
		      <div id="top_left"><img src="/Content/admin/images/login_03.gif" /></div>
			  <div id="top_center"></div>
		 </div>
		 
		 <div id="center">
		      <div id="center_left"></div>
			  <div id="center_middle">
			       <div id="user_div">用 户
			         <input name="username" id="username" type="text" class="ipt" value="" />
			       </div>
				   <div id="password_div">密   码
				     <input name="password" id="password" type="password" class="ipt" value="" />
				   </div>
			  </div>
			  <div id="center_right">
					
			  </div>		 
		 </div>
		 <div id="down">
		      <div id="down_left">
			      <div id="inf">
                       <span class="inf_text">版本信息</span>
					   <span class="copyright">管理信息系统 2014 v1.0</span>
			      </div>
			  </div>
			  <div id="down_center">
                  <div id="btn">
                      <a href="javascript:document.myform.submit();">登录</a>
                      <a href="javascript:clean();">清空</a>
                  </div>
			  </div>		 
		 </div>

	</div>
</form>
</body>

<script type="text/javascript">

    function clean() {
        $("#username").val("");
        $("#password").val("");
    }
</script>
