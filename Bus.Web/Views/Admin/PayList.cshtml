@{
    ViewBag.Title = "ManagerList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<Bus.Data.PayView>
<style type="text/css">
	html{_overflow-y:scroll}
</style>

<div class="table-list">
    <table width="100%" cellspacing="0" >
        <thead>
            <tr>
            <th align='center' width="120">期间</th> 
            <th align='center' width="80">线路</th>
            <th align='center' width="60">类型</th>
            <th align='center' width="60">金额</th>
            <th align='center' width="80">经手人</th>
            <th align='center' width="80">收款方式</th>
            <th align='center' width="100">缴费时间</th>
			<th align='center' width="60">删除</th>
            </tr>
        </thead>
    <tbody>
        @if (Model.Count == 0) { 
        <tr>
            <td colspan="8">没有任何数据</td>
        </tr>
        }

        @{var alltypes = Bus.Data.SysCodeDB.SysCodeList("MNG");}
        @foreach(var item in Model){
            <tr>
				<td align='center'>
                   @(item.StartDate.ToString("yyyy.MM.DD") + "-" + item.EndDate.ToString("yyyy.MM.DD") )
				</td>
				<td align='center'>@(item.LineName)</td> 
                <td align='center'>
                    @("MO".Equals(item.RideType)? "早": 
                        "AF".Equals(item.RideType)? "晚" :  
                        "MA".Equals(item.RideType)? "全" :
                        "CN".Equals(item.RideType)? "次" : "" )
                </td> 
                <td align='center'>
                    @(item.PayMoney)
                </td>
                <td align='center'>
                    @(item.ManageName)
                </td> 
                <td align='center'>
                    @(item.PayType)
                </td> 
                <td align='center'>
                    @(item.PayTime)
                </td> 
				<td align='center' >
                    <a href="javascript:DelData('','@(item.ID)')">删除</a>
				</td>
			</tr>                    
        }
   
    </tbody>
    </table>
</div>

